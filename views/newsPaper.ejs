<%- include('header',{title: 'Tin tá»©c covid19'}); -%>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100" style="padding-top: 5%; padding-bottom: 5%; padding-left: 20px; padding-right: 20px;display: block; width: 1200px; margin: 0;">
      <% for(var i = 0; i < newsFeedList.length ; i++) { %>
        <div class = "newsPaperWrap">
            <div class = "newsPaperImage">
              <%- newsFeedList[i].img; %>
            </div>
            <div class="newsPaperTitle">
              <a href=" <%= newsFeedList[i].link; %> "> <%= newsFeedList[i].title; %></a>            
            </div>
            <div class="newsPaperDateTime">
              <%= newsFeedList[i].publishedAt; %>
            </div>
            <div>
              <%= newsFeedList[i].content; %>
            </div>
        </div>
      <% } %>
      <div class="newsPaperPaginate">
        <% if(pageNumber > 0){ %>
        <a href="newsPaper/<%= pageNumber - 1; %>">
        <button class="buttonPaginate" type="submit">Prev</button>
        </a>
        <% } if(pageNumber < TotalPages){ %>
          <a href="newsPaper/<%= pageNumber + 1; %>">
        <button class="buttonPaginate" type="submit"> Next</button>
        </a>
        <% } %>
      </div>  
    </div>                                            
  </div>
</div>
<%- include('footer'); -%>